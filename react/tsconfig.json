{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "Node",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  }
}
