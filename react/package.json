{
  "name": "@cs125/jeed",
  "description": "React support and TypeScript typings for Jeed.",
  "license": "MIT",
  "author": "Geoffrey Challen <geoffrey.challen@gmail.com>",
  "homepage": "https://github.com/cs125-illinois/jeed",
  "repository": "https://github.com/cs125-illinois/jeed",
  "bugs": "https://github.com/cs125-illinois/jeed/issues",
  "version": "2020.7.1",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "backend": "npm run backend:up ; npm run backend:down",
    "backend:down": "docker-compose --env-file example/.env.development -p $npm_package_name down",
    "backend:up": "docker-compose --env-file example/.env.development -p $npm_package_name up",
    "build": "rm -rf dist && GIT_COMMIT=$(git show --no-patch --format=%h) rollup -c",
    "check": "npm run eslint && npm run tsc && npm run prettier && npm run depcheck",
    "client": "rollup -c -w",
    "depcheck": "depcheck --ignore-dirs dist,docs --ignores=@types/*,concurrently,@typescript-eslint/*,eslint-plugin-*,$npm_package_name",
    "eslint": "eslint --fix src/ --max-warnings=0 --ext .js,.ts,.tsx",
    "example": "cd example && GIT_COMMIT=$(git show --no-patch --format=%h) npm run develop",
    "ncu": "ncu",
    "prepublishOnly": "npm run check && npm run build",
    "start": "concurrently -n client,example \"npm run client\" \"npm run example\"",
    "test": "npx env-cmd -f example/.env.development ts-mocha --paths tests/**/*.ts",
    "tsc": "tsc --noEmit",
    "prettier": "prettier --write src/ tests/ example/ .vscode/ *.json *.js .*.js *.md *.yml && prettier-package-json --write"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^2.2.1",
    "runtypes": "^5.0.1"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=16"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/deep-diff": "^1.0.0",
    "@types/js-yaml": "^3.12.5",
    "@types/lodash": "^4.14.157",
    "@types/mocha": "^8.0.0",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.43",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "deep-diff": "^1.0.2",
    "depcheck": "^1.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.19",
    "mocha": "^8.0.1",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^7.0.2",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "rollup": "^2.22.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-mocha": "^7.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,md}": [
      "prettier --write"
    ],
    ".*.js": [
      "prettier --write"
    ],
    "{src,example}/**/*.ts?(x)": [
      "prettier --write",
      "eslint --fix",
      "bash -c \"tsc --noEmit --project .\"",
      "bash -c \"npm run depcheck\""
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 2
  }
}
