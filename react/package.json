{
  "name": "@cs125/react-jeed",
  "description": "React support for Jeed.",
  "license": "MIT",
  "author": "Geoffrey Challen <geoffrey.challen@gmail.com>",
  "repository": "https://github.com/cs125-illinois/jeed",
  "bugs": "https://github.com/cs125-illinois/jeed/issues",
  "version": "2020.4.9",
  "main": "dist/index.cjs.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "backend": "docker-compose -p react-jeed up",
    "build": "rm -rf dist && GIT_COMMIT=$(git show --no-patch --format=%h) rollup -c",
    "build:docs": "rm -rf ../docs && parcel build example/index.html --out-dir ../docs --public-url=\"/jeed\"",
    "check": "npm run eslint && npm run tsc && npm run prettier && npm run depcheck",
    "depcheck": "depcheck --ignore-dirs dist,docs --ignores=@types/*,@hot-loader/react-dom,parcel,concurrently,@mdx-js/parcel-plugin-mdx,@typescript-eslint/*,@cs125/react-jeed",
    "eslint": "eslint --fix src/ example/ --max-warnings=0 --ext .js,.ts,.tsx",
    "ncu": "ncu",
    "prepublishOnly": "npm run check && npm run build",
    "start": "concurrently -n example,src,backend --handle-input \"parcel example/index.html\" \"npm run watch\" \"npm run backend\"",
    "poststart": "docker-compose -p react-jeed down",
    "test": "npx env-cmd -f .env.development ts-mocha --paths tests/**/*.ts",
    "testing": "concurrently -n src,backend \"npm run watch\" \"npm run backend\"",
    "tsc": "tsc",
    "prettier": "prettier --write src/ tests/ example/ .vscode/ *.json *.js .*.js *.md *.yml && prettier-package-json --write",
    "watch": "rollup -c -w"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^2.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "runtypes": "^4.2.0"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=16"
  },
  "devDependencies": {
    "@cs125/element-tracker": "^2020.5.4",
    "@cs125/mace": "^2020.5.4",
    "@cs125/react-google-login": "^2020.5.1",
    "@hot-loader/react-dom": "^16.13.0",
    "@mdx-js/parcel-plugin-mdx": "^1.6.1",
    "@mdx-js/react": "^1.6.1",
    "@types/chai": "^4.2.11",
    "@types/deep-diff": "^1.0.0",
    "@types/js-yaml": "^3.12.3",
    "@types/lodash": "^4.14.150",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-syntax-highlighter": "^11.0.4",
    "@types/styled-components": "^5.1.0",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "ace-builds": "^1.4.11",
    "babel-eslint": "^10.1.0",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^5.2.0",
    "deep-diff": "^1.0.2",
    "depcheck": "^0.9.2",
    "env-cmd": "^10.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.5",
    "js-yaml": "^3.13.1",
    "lint-staged": "^10.2.2",
    "lodash": "^4.17.15",
    "mocha": "^7.1.2",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^5.0.0",
    "parcel": "^1.12.4",
    "prettier": "^2.0.5",
    "prettier-package-json": "^2.1.3",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-ace": "^8.1.0",
    "react-app-polyfill": "^1.0.6",
    "react-children-utilities": "^2.1.0",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-syntax-highlighter": "^12.2.1",
    "rollup": "^2.9.1",
    "rollup-plugin-typescript2": "^0.27.1",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "slugify": "^1.4.0",
    "styled-components": "^5.1.0",
    "ts-mocha": "^7.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.2"
  },
  "alias": {
    "@cs125/react-jeed": ".",
    "react-dom": "@hot-loader/react-dom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,js,md}": [
      "prettier --write"
    ],
    ".*.js": [
      "prettier --write"
    ],
    "{src,example}/**/*.ts?(x)": [
      "prettier --write",
      "eslint --fix",
      "bash -c \"tsc --noEmit --project .\"",
      "bash -c \"npm run depcheck\""
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 2
  }
}
