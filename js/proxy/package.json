{
  "private": true,
  "name": "@cs124/jeed-proxy",
  "version": "2021.7.0",
  "scripts": {
    "build": "rimraf dist && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "clean": "rimraf dist",
    "eslint": "eslint src/**",
    "ncu": "ncu",
    "start": "ts-node src/index.ts",
    "prettier": "prettier -w --plugin=prettier-plugin-organize-imports . && prettier-package-json --write",
    "predocker:build": "yarn build",
    "docker:build": "docker build --build-arg VERSION=$npm_package_version --build-arg GIT_COMMIT=$(git show --no-patch --format=%h) --build-arg BUILD_DATE=`date -u +\"%Y-%m-%dT%H:%M:%SZ\"` . -t cs124/jeed-proxy:latest",
    "postdocker:build": "yarn docker:tag",
    "docker:push": "docker push cs124/jeed-proxy:latest && docker push cs124/jeed-proxy:$npm_package_version",
    "docker:tag": "docker tag cs124/jeed-proxy:latest cs124/jeed-proxy:$npm_package_version"
  },
  "dependencies": {
    "@cs124/jeed-types": "2021.7.0",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "es6-promise": "^4.2.8",
    "google-auth-library": "^7.3.0",
    "http-terminator": "^3.0.0",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0",
    "mongodb": "3.6.10",
    "mongodb-client-encryption": "^1.2.6",
    "mongodb-uri": "^0.9.7",
    "node-fetch": "^2.6.1",
    "runtypes": "6.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/assert": "^1.5.5",
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.0.3",
    "@types/koa__router": "^8.0.7",
    "@types/lodash": "^4.14.171",
    "@types/mongodb": "^3.6.20",
    "@types/mongodb-uri": "^0.9.1",
    "@types/node-fetch": "^2.5.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-eslint": "^10.1.0",
    "depcheck": "^1.4.2",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.12.15",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.12",
    "npm-check-updates": "^11.8.2",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
    "watch": [
      "package.json",
      "src"
    ],
    "ext": "*.ts",
    "exec": "ts-node src/index.ts"
  }
}
