{
  "private": true,
  "name": "proxy",
  "version": "2022.6.0",
  "scripts": {
    "build": "rimraf dist && esbuild src/index.ts --log-level=warning --sourcemap --bundle --platform=node --outfile=dist/index.js",
    "checker": "yarn depcheck && yarn prettier && yarn eslint && yarn tsc",
    "clean": "rimraf dist",
    "depcheck": "depcheck --ignores=prettier-plugin-*,eslint-plugin-*,env-cmd,ts-node --ignore-dirs=dist",
    "predocker:build": "yarn build",
    "docker:build": "docker build . -t cs124/jeed-proxy:latest",
    "postdocker:build": "yarn docker:tag",
    "docker:push": "docker push cs124/jeed-proxy:latest && docker push cs124/jeed-proxy:$npm_package_version",
    "docker:tag": "docker tag cs124/jeed-proxy:latest cs124/jeed-proxy:$npm_package_version",
    "eslint": "eslint src/**",
    "ncu": "ncu",
    "start": "nodemon",
    "tsc": "tsc --noEmit",
    "prettier": "prettier -w --plugin=prettier-plugin-organize-imports . && prettier-package-json --write"
  },
  "dependencies": {
    "@cs124/jeed-types": "2022.6.0",
    "@cs124/koa-google-login": "2021.11.0",
    "@koa/cors": "3.3.0",
    "@koa/router": "10.1.1",
    "@panva/hkdf": "1.0.2",
    "fetch-retry": "5.0.2",
    "google-auth-library": "8.0.2",
    "isomorphic-fetch": "3.0.0",
    "jose": "4.8.1",
    "koa": "2.13.4",
    "koa-body": "5.0.0",
    "koa-ratelimit": "5.0.1",
    "mongodb": "4.7.0",
    "mongodb-uri": "0.9.7",
    "runtypes": "6.5.1"
  },
  "devDependencies": {
    "@types/isomorphic-fetch": "0.0.36",
    "@types/koa": "2.13.4",
    "@types/koa-ratelimit": "4.2.4",
    "@types/koa__cors": "3.3.0",
    "@types/koa__router": "8.0.11",
    "@types/mongodb-uri": "0.9.1",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "env-cmd": "10.1.0",
    "esbuild": "0.14.43",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "nodemon": "2.0.16",
    "npm-check-updates": "13.1.5",
    "prettier": "2.6.2",
    "prettier-package-json": "2.6.3",
    "ts-node": "10.8.1",
    "typescript": "4.7.3"
  },
  "nodemonConfig": {
    "watch": [
      "package.json",
      "src/index.ts",
      ".env.development"
    ],
    "ext": "*.ts",
    "exec": "env-cmd -f .env.development ts-node src/index.ts"
  }
}
